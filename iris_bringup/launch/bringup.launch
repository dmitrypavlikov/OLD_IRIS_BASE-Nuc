<launch>
	<!-- base_control launch -->
	<node pkg="base_control" type="serial_script.py" name="serial_controller"/>
	
	<!-- rp_lidar launch -->
	<node name="rplidarNode"          pkg="rplidar_ros"  type="rplidarNode" output="screen">
  		<param name="serial_port"         type="string" value="/dev/rplidar"/>
  		<param name="serial_baudrate"     type="int"    value="115200"/><!--A1/A2 -->
  		<param name="frame_id"            type="string" value="laser"/> 
  		<param name="inverted"            type="bool"   value="false"/>
  		<param name="angle_compensate"    type="bool"   value="true"/>
  		<param name="scan_mode"           type="string" value="Express"/>
  	</node>
	<node pkg="iris_nav" type="lidar_transform.py" name="lidar_transform"/>
	<node pkg="iris_nav" type="rescan_script.py" name="rescan_node"/>

	<!-- ros_astra_camera launch -->
    	<include file="$(find astra_camera)/launch/astra.launch" />
	<node pkg="iris_nav" type="camera_transform.py" name="camera_transform" /> 
	
	<!-- bs_arm_control launch -->
    	<include file="$(find bs_arm_controll)/launch/bs_arm_launch.launch"/> 
</launch>
