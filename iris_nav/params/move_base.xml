<launch>
  <arg name="scan" default="rescan" />
  <arg name="use_astra" default="false" />
  <node pkg="move_base" type="move_base" respawn="false" name="move_base_node" output="screen">

    <!-- #Using base_global_planner "global_planner/GlobalPlanner"  --> 
    <param name="base_global_planner" value="global_planner/GlobalPlanner" />

    <!-- #Using dwa_local_planner and default trajectory planner"dwa_local_planner/DWAPlannerROS" 
    <param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS" /> -->
    <param name="base_local_planner" value="base_local_planner/TrajectoryPlannerROS" />    
    <rosparam file="$(find iris_nav)/params/costmap_common_params.yaml" command="load" ns="global_costmap" unless="$(arg use_astra)" />
    <rosparam file="$(find iris_nav)/params/costmap_common_params.yaml" command="load" ns="local_costmap" unless="$(arg use_astra)" />
    <rosparam file="$(find iris_nav)/params/combo_costmap_common_params.yaml" command="load" ns="global_costmap" if="$(arg use_astra)"/>
    <rosparam file="$(find iris_nav)/params/combo_costmap_common_params.yaml" command="load" ns="local_costmap" if="$(arg use_astra)"/>
    <rosparam file="$(find iris_nav)/params/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find iris_nav)/params/global_costmap_params.yaml" command="load" />
    <!-- <rosparam file="$(find iris_nav)/params/dwa_local_planner_params.yaml" command="load" /> -->
    <rosparam file="$(find iris_nav)/params/base_local_planner_params.yaml" command="load" />
    <rosparam file="$(find iris_nav)/params/recovery_behaviors.yaml" command="load" />
    <rosparam file="$(find iris_nav)/params/move_base_params.yaml" command="load" />

  </node>
</launch>
